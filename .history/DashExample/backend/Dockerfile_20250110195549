# backend/Dockerfile
FROM python:3.9-slim

# Install system dependencies for PyVista/VTK
RUN apt-get update && apt-get install -y \
    libgl1-mesa-glx \
    libxext6 \
    libxrender1 \
    libsm6 \
    libx11-6 \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY main.py .

# (Optional) Create a directory for output data, if needed
RUN mkdir data_output

EXPOSE 5000
CMD ["python", "main.py"]
